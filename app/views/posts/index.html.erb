<p id="notice"><%= notice %></p>

<h2>Listing Posts</h2>

<table class="table table-hover table-striped table-bordered">
  <thead>
    <tr>
      <th >Title</th>
      <th>Context</th>
      <th >Action</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= truncate(post.title, :length => 20) %></td>
        <td><%= truncate(post.context,:length => 100)%></td>
        <td>
        <%= link_to 'Show', post,class: "btn btn-default btn-sm" %>
        <%= link_to 'Edit', edit_post_path(post),class: "btn btn-primary btn-sm" %>
        <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' },class: "btn btn-danger btn-sm" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
